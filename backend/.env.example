# Backend environment variables
# Copy this to .env and fill in your values

# Server
PORT=4000
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL=postgresql://aiblty:your_secure_password@db:5432/aiblty

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Configuration
# Comma-separated list of emails that get admin access automatically
ADMIN_EMAILS=your-email@example.com

# CORS (comma-separated frontend URLs)
CORS_ORIGINS=https://aiblty.com,https://www.aiblty.com

# Frontend URL (for redirects)
FRONTEND_URL=https://aiblty.com

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_ELITE=price_your_elite_price_id

# PayPal (optional)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Revolut (optional)
REVOLUT_API_KEY=

# AI - OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# AI - Anthropic (optional)
ANTHROPIC_API_KEY=

# File Storage
STORAGE_PATH=./storage

# Logging
LOG_LEVEL=info
